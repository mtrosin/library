{% extends 'common/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="form-signin text-center">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Você está logado como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <img class="mb-4" src="{{ asset('img/book_big.png') }}" alt="" width="72" height="57">
        <h1 class="h3 mb-3 font-weight-normal">Login</h1>
        <div class="form-floating">
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" placeholder="Seu usuário" required autofocus>
            <label for="inputUsername">Usuário</label>
        </div> 
        <div class="form-floating">
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Sua senha" required>
            <label for="inputPassword">Senha</label>
        </div>        

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Lembrar-me
            </label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
    </form>
</div>
{% endblock %}
