{% extends 'common/internal.html.twig' %}

{% block title %}Autor - Visualizar{% endblock %}
{% block bclass %}sb-nav-fixed{% endblock %}

{% block content %}
    <h1 class="mt-4">Autores</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">Autores</li>
        <li class="breadcrumb-item">Visualizar</li>
        <li class="breadcrumb-item active">{{ author.name }}</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Visualizar Autor
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ author.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ author.name }}</td>
                    </tr>
                </tbody>
            </table>

            {{ include('author/_delete_form.html.twig') }}

            <a href="{{ path('author_index') }}">Voltar para a listagem</a>

            <a href="{{ path('author_edit', {'id': author.id}) }}">Modificar</a>
        </div>
    </div>
{% endblock %}